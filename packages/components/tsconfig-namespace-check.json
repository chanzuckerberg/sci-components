{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/common/**/*",
    "src/core/**/*",
    "jest.setup.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "paths": {
      "src/*": ["src/*"]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ]
  }
}
