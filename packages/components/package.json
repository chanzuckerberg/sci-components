{
  "name": "@czi-sds/components",
  "version": "22.13.1",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.cjs.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/chanzuckerberg/sci-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn sd-build && rollup -c",
    "build-watch": "rollup -c -w",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs-build",
    "test-storybook": "test-storybook",
    "lint": "concurrently \"../../node_modules/.bin/eslint src/**/*.{ts,tsx} --quiet --fix\" \"../../node_modules/.bin/stylelint --fix '**/*.{js,ts,tsx,css}'\"  \"npm run type-check\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "sd-generate-fonts": "tsx ./src/common/styles-dictionary/scripts/generate-font-tokens.ts",
    "sd-generate-colors": "tsx ./src/common/styles-dictionary/scripts/generate-color-tokens.ts",
    "sd-generate-corners": "tsx ./src/common/styles-dictionary/scripts/generate-corner-tokens.ts",
    "sd-generate-spaces": "tsx ./src/common/styles-dictionary/scripts/generate-space-tokens.ts",
    "sd-generate-shadows": "tsx ./src/common/styles-dictionary/scripts/generate-shadow-tokens.ts",
    "sd-generate-icon-sizes": "tsx ./src/common/styles-dictionary/scripts/generate-icon-size-tokens.ts",
    "sd-generate-breakpoints": "tsx ./src/common/styles-dictionary/scripts/generate-breakpoint-tokens.ts",
    "sd-generate-borders": "tsx ./src/common/styles-dictionary/scripts/generate-border-tokens.ts",
    "sd-generate-design-tokens": "yarn sd-generate-fonts && yarn sd-generate-colors && yarn sd-generate-corners && yarn sd-generate-spaces && yarn sd-generate-shadows && yarn sd-generate-icon-sizes && yarn sd-generate-breakpoints && yarn sd-generate-borders",
    "sd-build": "yarn sd-generate-design-tokens && node ./src/common/styles-dictionary/build.mjs",
    "chromatic": "npx chromatic --exit-zero-on-changes --project-token=cad4aacbfeba",
    "storybook:axe": "yarn build-storybook && yarn storybook:axeOnly",
    "storybook:axeOnly": "axe-storybook --build-dir docs-build",
    "namespace-check": "tsc --p tsconfig-namespace-check.json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,yml}": "npx prettier --write"
  },
  "files": [
    "dist"
  ],
  "description": "2021 Create-a-thon Science Initiative Component Library",
  "bugs": {
    "url": "https://github.com/chanzuckerberg/sci-components/issues"
  },
  "homepage": "https://github.com/chanzuckerberg/sci-components#readme",
  "keywords": [
    "react",
    "materialui",
    "science",
    "design",
    "system",
    "component",
    "library"
  ],
  "author": "",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/base": "^5.0.0-beta.30",
    "@mui/icons-material": "^5.15.3",
    "@mui/lab": "^5.0.0-alpha.159",
    "@mui/material": "^5.15.3",
    "react": ">=17.0.1",
    "react-dom": ">=17.0.1"
  },
  "devDependencies": {
    "@figma/code-connect": "^1.3.4",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "style-dictionary": "^4.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "5.3.3"
  }
}
