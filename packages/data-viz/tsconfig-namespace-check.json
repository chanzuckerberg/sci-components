{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/common/**/*",
    "src/core/**/*",
    "jest.setup.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ]
  }
}
